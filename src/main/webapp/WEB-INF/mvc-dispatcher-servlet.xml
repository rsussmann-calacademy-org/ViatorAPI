    <task:scheduled-tasks scheduler="myScheduler">
        <task:scheduled ref="serviceMarketo" method="syncPendingLeads" cron="0 20 0 * * *"/>
        <task:scheduled ref="serviceMarketo" method="syncPendingConstituents" cron="0 0 4 * * *"/>
        <task:scheduled ref="serviceMarketo" method="syncPendingOrders" cron="0 15 4 * * *"/>
        <task:scheduled ref="serviceMarketo" method="syncPendingOrderDetails" cron="0 30 4 * * *"/>
        <task:scheduled ref="serviceMarketo" method="syncPendingVisitations" cron="0 45 4 * * *"/>
        <task:scheduled ref="serviceMarketo" method="sendEmailReport" cron="0 30 7 * * *"/>
        <task:scheduled ref="serviceMarketo" method="calculateUpdatedLeads" cron="0 5 0 * * *"/>
    </task:scheduled-tasks>

    <task:scheduler id="myScheduler" pool-size="10"/>
</beans>